<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresentationSlides">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example Presentation"
        android:id="@+id/auto_progress_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grid View"
        android:id="@+id/grid_view_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide One - Large Video"
        android:id="@+id/slide_one_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Two - Image and Text"
        android:id="@+id/slide_two_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Three - Large Image"
        android:id="@+id/slide_three_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Four - Dual Scrolling Images"
        android:id="@+id/slide_four_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Five - Quad Image and Video"
        android:id="@+id/slide_five_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Six - Vertical Image Scroller + Static Image with Title and Body Text"
        android:id="@+id/slide_six_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Seven - Image Grid"
        android:id="@+id/slide_seven_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Eight - Dual Static Images, Image Scroller and Video"
        android:id="@+id/slide_eight_button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Slide Nine - Triple Image Scroller"
        android:id="@+id/slide_nine_button"
        android:layout_gravity="center_horizontal" />

</LinearLayout>